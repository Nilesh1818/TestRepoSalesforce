<aura:component implements="flexipage:availableForAllPageTypes,lightning:isUrlAddressable" 
access="global">

<aura:attribute name="data" type="String"/>

<aura:handler name="init" value="{!this}" action="{!c.onLoad}"></aura:handler>


<lightning:card>
<div class="slds-m-arround-small">

    <h1>Aura component</h1>
    {!v.data}

</div>

</lightning:card>
</aura:component>	
